<!-- app/views/chat/index.html.erb -->

<h1>Chat with AI</h1>

<div id="chat-box">
  <% @chat_service.messages.each do |message| %>
    <p><%= message[:role] %>: <%= message[:content] %></p>
  <% end %>
</div>

<%= form_with(url: chat_index_path, method: :post) do |form| %>
  <div>
    <%= form.text_field :user_input, id: 'user-input', placeholder: 'Your message' %>
    <%= form.submit 'Send' %>
  </div>
</form>
